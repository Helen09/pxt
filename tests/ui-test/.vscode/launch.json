  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via NPM",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "test"
      ],
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "bdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/src/index.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}